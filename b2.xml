<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9FAF0">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/group"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="227dp"
        android:layout_height="86dp"
        android:layout_marginTop="32dp"
        android:text="FORGET PASSWORD"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#151313"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="92dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="404dp"
        android:layout_height="61dp"
        android:text="Provied your account's  email for which you want to reset you password"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="344dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#8E5353"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/layer_x0020_1"
        tools:layout_editor_absoluteX="45dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="278dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="@color/cardview_dark_background"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="  email"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="92dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="325dp"
        android:layout_height="62dp"
        android:layout_marginTop="144dp"
        android:backgroundTint="#E6BC23"
        android:text="NEXT"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#131212"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="45dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mail_2935365_1"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="436dp" />
</androidx.constraintlayout.widget.ConstraintLayout>