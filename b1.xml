<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#683130"
    android:backgroundTint="@color/teal_200">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="237dp"
        android:layout_height="177dp"
        android:baselineAlignBottom="false"
        app:srcCompat="@drawable/circle"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="68dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="64dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FA100F0F"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:text="GROW" />

    <TextView
        android:id="@+id/textView2"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="172dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#1E0303"
        android:textColorHint="#FD070000"
        android:textColorLink="#050000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:layout_editor_absoluteX="125dp"
        tools:text="YOUR BUSINESS" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="327dp"
        android:layout_height="37dp"
        android:layout_marginTop="44dp"
        android:text="we will help you to grow business using  "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#070707"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="42dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="103dp"
        android:layout_height="38dp"
        android:text="online sever"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#191717"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="391dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FFEB3B"
        android:backgroundTintMode="src_over"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#131313"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="19dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="151dp"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FFEB3B"
        android:text="SIGN UP"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#070000"
        android:textColorHint="#FFEB3B"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="236dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginTop="164dp"
        android:text="How we work"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="125dp" />
</androidx.constraintlayout.widget.ConstraintLayout>